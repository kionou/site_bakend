                </svg>
                <div>
                  <%= alert %>
                </div>
              </div>
              <% }%>
            <form action="/connection" method="post">
              <div class="form-group row">
                <div class="col-md-12">
                  <input type="email" class="form-control" name="email" placeholder="Adresse Email ">
                  <% if (alert && alert.email) { %> 
                    <div class="validation text-center"> <%= alert.email.msg %></div>
                 <% }%> 
                </div>
              </div>
              <div class="form-group row">
                <div class="col-md-12">
                 <input type="password" class="form-control" name="password" placeholder="Mot de Passe">
                 <% if (alert && alert.password) { %> 
                  <div class="validation text-center"> <%= alert.password.msg %></div>
               <% }%> 
                </div>
              </div>
              <div class="form-group row ">
                <div class="col-md-6 mr-auto text-center">
                  <input type="submit" class="btn btn-block btn-primary text-white py-3 px-5" value="connecxion">
                </div>
              </div>
              <div>
                  <p class="text-center">non enregistré ? <a href="/inscription"> créer un compte</a></p>
              </div>
            </form>
          </div>
